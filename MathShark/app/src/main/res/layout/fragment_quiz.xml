<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizFragment"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/titleQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#4D6FD5"
        android:text="Titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ejemplo de pregunta?"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleQuestion" />

    <RadioGroup
        android:id="@+id/groupAnswer"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="41dp" >

        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A0A0A0"
            android:text="respuesta A" />

        <RadioButton
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:textColor="#A0A0A0"
            android:layout_height="wrap_content"
            android:text="respuesta B" />

        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:textColor="#A0A0A0"
            android:layout_height="wrap_content"
            android:text="respuesta C" />

        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A0A0A0"
            android:text="respuesta D" />

    </RadioGroup>





</androidx.constraintlayout.widget.ConstraintLayout>